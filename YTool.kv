#:kivy 1.10.0

YToolRoot:

<YToolRoot>:                
    LeftNavi
    ListSection
    ContentSection

<LeftNavi@BoxLayout>:    
    id: leftNaviSection
    orientation: 'vertical'    
    width: '48dp'
    size_hint_x: None
    bcolor: 0.2, 0.2, 0.2, 1
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        id: leftnaviswitcher
        size_hint_y: None
        height: '48dp'
        #background_normal: ''
        background_color: root.bcolor   
        #background_down: ''
        text: root.navimenuswitcher
        font_name: 'fontawesome-webfont_1.ttf'
        font_size: 18
        on_press: root.naviMenuSwitch()
    Button:
        background_normal: ''
        background_color: root.bcolor   
        background_down: ''
        text: u'\uF143'
        font_name: 'fontawesome-webfont_1.ttf'
        font_size: 18
    Button:
        background_normal: ''
        background_color: root.bcolor   
        background_down: ''
        text: u'\uF013'
        font_name: 'fontawesome-webfont_1.ttf'
        font_size: 18
    
        
    

<ListSection@BoxLayout>:
    id: leftListSection
    orientation: 'vertical' 
    width: '240dp'
    size_hint_x: None
    bcolor: 0.15, 0.15, 0.15, 1
    rv:rv
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: 'ListSection'
    Button:
        text: 'Populate list'
        on_press: root.populate()
    RecycleView:
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: dp(114)
        bar_width: dp(10)
        viewclass: 'Row'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(2)

<ContentSection@BoxLayout>:
    bcolor: 0.118, 0.118, 0.118, 1
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'ContentSection'
    
<Row@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        text: root.value